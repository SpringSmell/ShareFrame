<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionBarSize"
    android:background="@color/colorThemeTitle"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/titleName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:gravity="center"
        android:visibility="gone"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/actionBarSize"
        android:layout_marginRight="@dimen/actionBarSize"
        android:background="@drawable/selector_bg_tran_white50"
        android:textSize="@dimen/textTitleSize"
        android:singleLine="true"
        android:textColor="@color/selector_white_text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize">

        <TextView
            android:id="@+id/titleLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:drawableLeft="@drawable/selector_back"
            android:singleLine="true"
            android:background="@drawable/selector_back"
            android:textSize="25sp"
            android:textColor="@color/selector_white_text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/titleRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="10dp"
            android:visibility="gone"
            android:textColor="@color/selector_white_text" />
    </RelativeLayout>
</FrameLayout>